<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Alvaro_Practica3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Alvaro_Practica3"
    Shell.FlyoutBehavior="Flyout">

    <!-- Menú Lateral -->
    <FlyoutItem Title="Artículos" Route="articulos">
        <ShellContent
        Title="Artículos"
        ContentTemplate="{DataTemplate local:Views.ArticulosPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Carrito" Route="carrito">
        <ShellContent
        Title="Carrito"
        ContentTemplate="{DataTemplate local:Views.CarritoPage}" />
    </FlyoutItem>





</Shell>
